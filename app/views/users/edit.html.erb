<%= form_with model: @user do |form| %>
  <%= form.label :username%>
  <%= form.text_field :username %><br><br>
  <%= form.label :email %>
  <%= form.email_field :email%><br><br>
  <%= form.label :password %>
  <%= form.password_field :password, value: @user.password %><br><br>
  <%= form.submit %>
<% end %>

